@using Mercado.Dominio;

@model Venda

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdVenda)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdVenda)
        </dd>

        <dt>
            Produto
        </dt>

        <dd>
            @Model.Produto.Nome
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Funcionario)
        </dt>

        <dd>
           @ViewBag.Funcionario.Nome
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.IdVenda }) |
    @Html.ActionLink("Voltar a lista", "Index")
</p>
