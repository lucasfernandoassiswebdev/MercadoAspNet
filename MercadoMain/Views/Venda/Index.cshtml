@model IEnumerable<MercadoDominio.Entidades.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de vendas</h2>

<p>
    @Html.ActionLink("Cadastrar nova venda", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdFuncionario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.IdVenda
        </td>
        <td>
           @item.Produto.Nome
        </td>
        <td>
           @item.Quantidade
        </td>
        <td>
           @item.Funcionario.Nome
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.IdVenda }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdVenda }) |
            @Html.ActionLink("Deletar", "Excluir", new { id = item.IdVenda })
        </td>
    </tr>
}

</table>
