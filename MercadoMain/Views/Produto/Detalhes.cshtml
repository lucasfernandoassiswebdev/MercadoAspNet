@model MercadoDominio.Entidades.Produto

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            Fabricante
        </dt>

        <dd>
            @ViewBag.Fabricantes.Nome
        </dd>

        <dt>
            Distribuidor
        </dt>

        <dd>
            @ViewBag.Distribuidores.Nome
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            R$ @Html.DisplayFor(model => model.Valor)
        </dd>
        
        <dt>
            Imagem
        </dt>

        <dd>
            <img src="@Model.Imagem" style="max-height: 300px; max-width: 300px"/>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    @Html.ActionLink("Voltar a lista", "Index")
</p>
