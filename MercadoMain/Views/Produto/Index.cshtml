@model IEnumerable<Mercado.Dominio.Produto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de produtos</h2>

<p>
    @Html.ActionLink("Criar novo produto", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Fabricante
        </th>
        <th>
            Distribuidor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @item.Fabricante.Nome
        </td>
        <td>
            @item.Distribuidor.Nome
        </td>
        <td>
            @item.Valor
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Excluir", new { id=item.Id })
        </td>
    </tr>
}

</table>
