@model MercadoDominio.Entidades.Login

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h3>Deseja mesmo excluir este login?</h3>
<div>
    <h4>Login</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Login
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoginU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>

        <dd>
            @Model.Funcionario.Nome
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista", "Index")
        </div>
    }
</div>
