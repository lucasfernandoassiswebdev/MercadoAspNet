@model MercadoDominio.Entidades.Login

@{
    ViewBag.Title = "Editar";
}

<h2 style="margin-bottom: 10px">Editar informações de login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr style="margin-top: 20px;margin-bottom: 60px"/>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        
        <div style="margin-left: 9.4%; margin-bottom: 0.5%;margin-top: 30px">
            <label for="loginUsuario">Login desejado</label>
            <input type="text" id="loginUsuario" name="LoginU" value="@ViewBag.Login.LoginU"/>
        </div>
        
        <input type="hidden" name="Usuario" value="@ViewBag.Login.Usuario"/>

        <div class="form-group" style="margin-left: 12.7%">
            <label for="campoSenha">Senha:</label>
            <input type="password" value="@ViewBag.Login.Senha" name="Senha" id="campoSenha"/>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
