@model IEnumerable<MercadoDominio.Entidades.Login>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-bottom: 60px">Index</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<p style="margin-top: 10px">
    @Html.ActionLink("Criar novo login", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            Login
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.LoginU
        </td>
        <td>
            @item.Funcionario.Nome
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id= item.Usuario }) |
            @Html.ActionLink("Deletar", "Excluir", new { id = item.Usuario })
        </td>
    </tr>
}

</table>
