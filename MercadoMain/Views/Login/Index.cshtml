@model IEnumerable<MercadoDominio.Entidades.Login>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo login", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            Login
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.senha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @item.Funcionario.Nome
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.senha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id= item.usuario }) |
            @Html.ActionLink("Deletar", "Excluir", new { id = item.usuario })
        </td>
    </tr>
}

</table>
