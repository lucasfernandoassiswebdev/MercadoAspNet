@model IEnumerable<MercadoDominio.Entidades.Estoque>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-bottom: 60px">Lista do estoque</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<p style="margin-bottom: 0px">
    @Html.ActionLink("Cadastrar novo item", "Cadastrar")
</p>

<table class="table" style="margin-top: 20px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Produto.Nome
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.IdProduto }) |
            @Html.ActionLink("Deletar", "Excluir", new { id = item.IdProduto })
        </td>
    </tr>
}

</table>
